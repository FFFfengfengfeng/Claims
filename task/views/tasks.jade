extends layout
block content
    h2 Tasks for project #(project.title)
    #list
    ul#task-list
        each task in tasks
            li
                span= task.title
                a.delet(href="/task/#{task.id}") X
    form(action="/project/#{project.id}/tasks", method="post")
        input(type="text", name="title")
        button Add