extends layout
block content
    a(href="/") Go back

    h2= item.title
    p= item.description
    h3 User reviews

    if (reviews.length)
        each review in reviews
            b #{review.stars} stars
            p= review.text
            hr
    else
        p No reviews to show. Write one!

    form(action="/item/#{item.id}/review", method="post")
        fieldset
            legend Create review
            p
                label(for="stars")
                select#(name="stars")
                    option(value="1")
                    option(value="2")
                    option(value="3")
                    option(value="4")
                    option(value="5")
            p
                label(for="review")
                textarea#(name="review", cols="30", rows="10")
            p
                button(type="submit") Send