extends layout
block content
    h2 All items
    if (items.length)
        ul
            each item in items
                li 
                    h3: a(href="/item/#{item.id}")= item.title
                    = item.description
    else 
        p No items to show
    
    h2 Create new item
        form(action="/create", method="post")
            p
                label(for="title")
                input(type="text", name="title")
            p
                label(for="description")
                textarea(name="description", cols="30", rows="10")
            p
                button(type="submit") Send